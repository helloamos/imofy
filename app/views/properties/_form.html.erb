

<!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Nouvelle propriété</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
          <%= form_for @property do |f| %>
              <div class="box-body">


             <div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class: "form-control", placeholder: "Nom et prénom" %>
			</div>

			<div class="form-group">
				<%= f.text_area :description, class: "form-control", placeholder: "Téléphone" %>
			</div>
			<div class="form-group">
				<%= f.text_field :status, class: "form-control", placeholder: "Ville" %>
			</div>

              <!-- /.box-body -->

              <div class="box-footer">
               
                <%= f.submit "Publier", class: "btn bg-purple pull-right" %>
                <button type="submit" class="btn btn-default pull-right">Annuler</button>
                
              </div>
           <% end %>
          </div>
          <!-- /.box -->