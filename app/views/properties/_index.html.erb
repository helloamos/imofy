<% @properties.each do |property| %>
    <tr>
      <td><%= image_tag property.thumbnail.url(:medium) %></td>
      <td><%= property.name %></td>
      <td><%= property_type(property.property_type_id) %></td>
      <td><%= number_with_precision(property.price, delimiter: " ", separator: "", precision: 0)  %></td>
      <td><%= property.city %></td>
      <td><%= property.neighborhood %></td>
      <td><span class="status-<%= property.status_id %>"><%= status(property.status_id) %></span></td>
                              
     
     

  <td>
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">GERER
      <span class="caret"></span></button>
      <ul class="dropdown-menu">
        
        <li>
            <%= link_to raw('<i class="fa fa-pencil-square-o" aria-hidden="true"> Modifier</i>'),edit_property_path(property), remote: false , "data-toggle"=>"tooltip", "data-placement"=>"top", title:"Modifier"%>
        <li>

          <li>
            <%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"> Supprimer</i>'), property_delete_path(property),:remote => true, class: "red-text" , "data-toggle"=>"tooltip", "data-placement"=>"top", title:"Supprimer"%>
            </li>
          
        
      </ul>
    </div>
  </td>
    </tr>
<% end %>