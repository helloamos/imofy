<p id="notice"><%= notice %></p>

<h1>Inquiry Mails</h1>

<table>
  <thead>
    <tr>
      <th>Sender name</th>
      <th>Sender phone</th>
      <th>Sender email</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiry_mails.each do |inquiry_mail| %>
      <tr>
        <td><%= inquiry_mail.sender_name %></td>
        <td><%= inquiry_mail.sender_phone %></td>
        <td><%= inquiry_mail.sender_email %></td>
        <td><%= inquiry_mail.content %></td>
        <td><%= inquiry_mail.user_id %></td>
        <td><%= link_to 'Show', inquiry_mail %></td>
        <td><%= link_to 'Edit', edit_inquiry_mail_path(inquiry_mail) %></td>
        <td><%= link_to 'Destroy', inquiry_mail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

