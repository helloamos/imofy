<p id="notice"><%= notice %></p>

<h1>Suscribers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suscribers.each do |suscriber| %>
      <tr>
        <td><%= suscriber.email %></td>
        <td><%= link_to 'Show', suscriber %></td>
        <td><%= link_to 'Edit', edit_suscriber_path(suscriber) %></td>
        <td><%= link_to 'Destroy', suscriber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suscriber', new_suscriber_path %>
